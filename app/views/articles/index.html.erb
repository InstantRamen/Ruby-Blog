<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <h3><%= link_to article.title, article_path(article) %></h3>
      <%= article.body %><br>
      <small class="created-by">created by <%= article.author %></small>
    </li>
    <hr>
  <% end %>
  
  <%= link_to "Create a New Article", new_article_path, class:"new_article" %>
  
</ul>